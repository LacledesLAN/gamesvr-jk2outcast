{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "docker pull lacledeslan/steamcmd:latest; docker pull debian:buster-slim; docker build . -f linux.Dockerfile -t lltest/gamesvr-jk2outcast --no-cache --build-arg BUILDNODE=$env:computername;",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "linux":{
                "command": "docker run -it --net=host -v ${workspaceFolder}/base/assets0.pk3:/app/base/assets0.pk3 -v ${workspaceFolder}/base/assets1.pk3:/app/base/assets1.pk3 -v ${workspaceFolder}/base/assets2.pk3:/app/base/assets2.pk3 -v ${workspaceFolder}/base/assets5.pk3:/app/base/assets5.pk3 lltest/gamesvr-jk2outcast ./jk2mvded +set fs_game base +set net_port 28070;",
            },
            "windows":{
                "command": "$IP=((Get-WmiObject -Class Win32_NetworkAdapterConfiguration | where {$_.DefaultIPGateway -ne $null}).IPAddress | select-object -first 1); docker run -it -p ${IP}:28070:28070/udp -p ${IP}:28070:28070/tcp -v ${workspaceFolder}/base/assets0.pk3:/app/base/assets0.pk3 -v ${workspaceFolder}/base/assets1.pk3:/app/base/assets1.pk3 -v ${workspaceFolder}/base/assets2.pk3:/app/base/assets2.pk3 -v ${workspaceFolder}/base/assets5.pk3:/app/base/assets5.pk3 --rm lltest/gamesvr-jk2outcast ./jk2mvded +set fs_game base +exec server.cfg;"
            },
            "dependsOn": "Build",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it -v ${workspaceFolder}/base/assets0.pk3:/app/base/assets0.pk3 -v ${workspaceFolder}/base/assets1.pk3:/app/base/assets1.pk3 -v ${workspaceFolder}/base/assets2.pk3:/app/base/assets2.pk3 -v ${workspaceFolder}/base/assets5.pk3:/app/base/assets5.pk3 --rm lltest/gamesvr-jk2outcast;",
            "dependsOn": "Build",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
